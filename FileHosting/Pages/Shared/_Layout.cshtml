<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FileHosting</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FileHosting.styles.css" asp-append-version="true" />
    <!-- Unified minimal app styles -->
    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/filetypes.css" asp-append-version="true" />
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">FileHosting</a>
                @* Hidden logout form available on every page (antiforgery token included) *@
                <form id="logoutForm" asp-page="/Account/Logout" method="post" style="display:none;">
                    @Html.AntiForgeryToken()
                </form>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">                      
                        @if (User.IsInRole("Admin") || User.IsInRole("SysAdmin"))
                        {
                        <li class="nav-item" id="HomeLink">
                            <a class="nav-link text-dark" asp-area="" asp-page="/FileOverview">Filer</a>
                        </li>
                        <li class="nav-item" id="UsersLink">
                            <a class="nav-link text-dark" asp-area="" asp-page="/UserOverview">Brugere</a>
                        </li>
                        <!-- only present for admin users-->

                        <li class="nav-item" id="InviteMemberLink">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Admin/InviteMember">Inviter</a>
                        </li>
                        <li class="nav-item" id="WasteBasketLink">
                            <a class="nav-link text-dark" asp-area="" asp-page="/WasteBasket">Papirkurv</a>
                        </li>
                        }
                        <!-- only present if not logged in-->
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item nav-end" id="LoginLink">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Account/Login">Login</a>
                            </li>
                        }
                        <!-- only present if logged in-->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item nav-end" id="Logout">
                                @* give the logout anchor the id the script expects; use '#' so JS handles the POST *@
                                <a href="#" id="logoutButton">
                                    <span class="nav-link text-dark">Logout</span>
                                </a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-usertile">@User.Identity.Name.ToUpper()</li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        (function () {
            var btn = document.getElementById('logoutButton');
            if (!btn) return;
            btn.addEventListener('click', function (e) {
                e.preventDefault(); // prevent anchor navigation so we can POST
                var form = document.getElementById('logoutForm');
                if (!form) { window.location.href = '@Url.Page("/Index")'; return; }

                // Get antiforgery token value
                var tokenInput = form.querySelector('input[name="__RequestVerificationToken"]');
                var token = tokenInput ? tokenInput.value : '';

                // Build body from form data (includes returnUrl if present)
                var formData = new FormData(form);
                var params = new URLSearchParams();
                for (var pair of formData.entries()) {
                    params.append(pair[0], pair[1]);
                }

                var action = form.getAttribute('action') || '@Url.Page("/Account/Logout")';

                fetch(action, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': token,
                        'Content-Type': 'application/x-www-form-urlencoded; charset=UTF-8'
                    },
                    body: params.toString()
                }).then(function (response) {
                    if (response.ok) {
                        window.location.href = '@Url.Page("/Index")';
                    } else {
                        window.location.reload();
                    }
                }).catch(function () {
                    window.location.reload();
                });
            });
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
