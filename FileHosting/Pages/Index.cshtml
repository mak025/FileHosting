@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="home-hero">
    <h1 class="hero-title">Velkommen</h1>
    <p class="hero-sub">En enkel og billig filhostingløsning for små virksomheder og foreninger — brugervenlig, sikker og klar til deling.</p>

    <div class="pricing-grid">
        <div class="pricing-card">
            <h3>Gratis</h3>
            <p class="price">0 kr</p>
            <ul>
                <li>2 GB lagring</li>
                <li>Enkel fil- og linkdeling</li>
                <li>Fællesskabs-support</li>
            </ul>
            <button class="btn btn-ghost btn-full">Kom i gang</button>
        </div>

        <div class="pricing-card highlight">
            <h3>Plus</h3>
            <p class="price">49 kr / md</p>
            <ul>
                <li>100 GB lagring</li>
                <li>Prioriteret deling & adgangskontrol</li>
                <li>Email-support</li>
            </ul>
            <button class="btn btn-primary btn-full">Vælg Plus</button>
        </div>

        <div class="pricing-card pro">
            <h3>Pro</h3>
            <p class="price">199 kr / md</p>
            <ul>
                <li>1 TB lagring</li>
                <li>Avanceret adgangsstyring & revision</li>
                <li>Prioriteret telefon- og email-support</li>
            </ul>
            <button class="btn btn-primary btn-full">Vælg Pro</button>
        </div>
    </div>
</div>