@page
@model FileHosting.Pages.UserOverviewModel
@{
    ViewData["Title"] = "Brugere";
}

<h1>Brugere</h1>
<p>Liste over alle brugere i systemet.</p>

<table class="table">
    <thead>
        <tr>
            <th>Navn</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Type</th>
            <th>Fagforening</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@user.Type</td>
                <td>@user.Union?.UnionName</td>
                <td>
                    <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Er du sikker på, at du vil slette denne bruger?');">
                        <input type="hidden" name="userId" value="@user.ID" />
                        <button type="submit" class="btn btn-sm btn-danger">Slet</button>
                        @Html.AntiForgeryToken()
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

