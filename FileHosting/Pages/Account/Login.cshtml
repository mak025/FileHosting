@page
        @model FileHosting.Pages.Account.LoginModel
        @{
            ViewData["Title"] = "Login";
        }
        
        <div class="auth-center">
            <div class="card auth-card">
                <h2 class="card-title">Log Ind</h2>
                <p class="card-sub">Indtast Email Adresse</p>
        
                <form method="post" novalidate class="auth-form">
                    <div asp-validation-summary="All" class="validation-summary"></div>

                    <div class="form-row">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email" class="form-input" placeholder="min@email.dk" autofocus />
                        <span asp-validation-for="Input.Email" class="validation-msg"></span>
                    </div>

                    <input type="hidden" asp-for="ReturnUrl" />

                    <button type="submit" class="btn btn-primary btn-full">Log ind</button>
                </form>
            </div>
        </div>
        
        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
