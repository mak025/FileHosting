@page
                    @model FileHosting.Pages.Admin.InviteMemberModel
                    @{
                        ViewData["Title"] = "Invite Member";
                    }
                    
                    <div class="center">
                        <section class="card" aria-labelledby="invite-heading">
                            <h1 id="invite-heading">Invite member</h1>
                            <p class="lead">Send et invitationslink til et nyt medlem ved at tilføje en mailadresse herunder.</p>
                    
                            @if (!string.IsNullOrEmpty(Model.StatusMessage))
                            {
                                <div class="status" role="status">
                                    @Model.StatusMessage
                                </div>
                            }
                    
                            <form method="post" novalidate>
                                <div class="form-field">
                                    <label asp-for="Input.Email">Email</label>
                                    <input asp-for="Input.Email" type="email" autocomplete="email" />
                                    <span asp-validation-for="Input.Email" class="validation"></span>
                                </div>
                    
                                <div class="actions">
                                    <a asp-page="/Index" class="btn btn-ghost" role="button">Annuler</a>
                                    <button type="submit" class="btn btn-primary">Send invitation</button>
                                </div>
                            </form>
                        </section>
                    </div>
                    
                    @section Scripts {
                        <partial name="_ValidationScriptsPartial" />
                    }